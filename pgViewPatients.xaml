<Page x:Class="Medisave.pgViewPatients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Medisave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgViewPatients" Cursor="Pen">

    <Grid Margin="0,0,-50,0" Background="#FFFDFDFD" Cursor="Pen">
        <Grid HorizontalAlignment="Left" Height="390" Margin="13,48,0,0" VerticalAlignment="Top" Width="623" Cursor="Pen">
            <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Cursor="Pen"/>
        </Grid>
        <Label x:Name="lblViewPatients" Content="Patients:" HorizontalAlignment="Left" Margin="286,14,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Arial Nova Cond" Cursor="Pen"/>
        <Grid  Background="#FF87BFBD" HorizontalAlignment="Left" Height="391" Margin="668,47,0,0" VerticalAlignment="Top" Width="168" Cursor="Pen">
            <Button x:Name="btnEdit" Content="EDIT" HorizontalAlignment="Left" Margin="20,19,0,0" VerticalAlignment="Top" Width="124" Height="28" RenderTransformOrigin="0.504,-0.313" Cursor="Pen"/>
            <Button x:Name="btnDelete" Content="DELETE" HorizontalAlignment="Left" Margin="20,85,0,0" VerticalAlignment="Top" Width="124" Height="28" Cursor="Pen"/>
            <Button x:Name="btnAddNote" Content="ADD NOTE" HorizontalAlignment="Left" Margin="20,156,0,0" VerticalAlignment="Top" Width="124" Height="28" Cursor="Pen"/>
            <Button x:Name="btnViewMedicalAid" Content="VIEW MEDICAL AID" HorizontalAlignment="Left" Margin="20,231,0,0" VerticalAlignment="Top" Width="124" Height="28" Cursor="Pen"/>
        </Grid>
        <Label x:Name="lblControls" Content="Controls:" HorizontalAlignment="Left" Margin="711,17,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Arial Nova Cond" Cursor="Pen"/>

    </Grid>
</Page>
